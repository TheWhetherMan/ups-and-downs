<UserControl x:Class="UpsAndDowns.Controls.HomeScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UpsAndDowns.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1024">
    <Grid Background="#2D0605">
        <ItemsControl d:ItemsSource="{d:SampleData}" Margin="0 10 0 0">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <local:PlayerCard Margin="10"  />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <local:ControlBar VerticalAlignment="Bottom" />

        <!-- TODO: PLAYER TURN DIALOG CONTAINER -->
    </Grid>
</UserControl>
