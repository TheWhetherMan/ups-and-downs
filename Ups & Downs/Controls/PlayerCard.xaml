<UserControl x:Class="UpsAndDowns.Controls.PlayerCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UpsAndDowns.Controls"
             mc:Ignorable="d" 
             Width="610" Height="216">
    <Grid Background="#3E517A">
        <StackPanel Orientation="Vertical" Margin="8">
            <TextBlock Foreground="#009DDC" Text="{Binding PlayerDisplayName}" d:Text="Player 1" FontSize="36" />
            <TextBlock Foreground="#009DDC" FontSize="36">
                <Run Text="$$" /><Run Text="0" Foreground="#80D39B" />
            </TextBlock>
            <TextBlock Foreground="#009DDC" Text="" FontSize="36">
                <Run Text="LP" /><Run Text="0" Foreground="#80D39B" />
            </TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
