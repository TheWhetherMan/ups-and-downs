<UserControl x:Class="UpsAndDowns.Controls.BasicEventControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UpsAndDowns.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1280">
    <Grid>
        <Rectangle Fill="{StaticResource YInMnBlue}" Opacity="0.8" />
        <Border CornerRadius="10" Background="{StaticResource CornflowerBlue}" Margin="30">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="1" x:Name="EventDescriptionHeader" Text="Event Description" FontSize="42" 
                           Foreground="{StaticResource YInMnBlueDark}" VerticalAlignment="Center" HorizontalAlignment="Center" />
                <ItemsControl Grid.Row="2" ItemsSource="{Binding EventChanges}" d:ItemsSource="{d:SampleData}" Margin="0 0 0 0">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Background="DarkRed" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <WrapPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Button Style="{StaticResource TallButtonStyleRed}" Content="Remove Luck" Click="RemoveLuckButton_Click" />
                    <Button Style="{StaticResource TallButtonStyleGreen}" Content="Add Luck" Click="AddLuckButton_Click" />
                </WrapPanel>
                <Button Grid.Row="4" Style="{StaticResource TallButtonStyleBlue}" Content="Confirm" Click="ConfirmButton_Click" />
                <Button x:Name="BackButton" Content="Back" Style="{StaticResource BasicButtonStyleRed}" Width="100" 
                        VerticalAlignment="Top" HorizontalAlignment="Left" Margin="50 50 0 0" Click="BackButton_Click" />
            </Grid>
        </Border>
    </Grid>
</UserControl>
