<UserControl x:Class="UpsAndDowns.Controls.ControlBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UpsAndDowns.Controls"
             mc:Ignorable="d" 
             Width="1280" Height="70">
    <Grid Background="#3E517A">
        <Button x:Name="LeftButton" Style="{StaticResource BasicButtonStyleBlue}" Content="Options" 
                Width="150" Height="50" Margin="10" HorizontalAlignment="Left" Click="OptionsButton_Click" />
        <Button x:Name="CenterButton" Style="{StaticResource BasicButtonStyleGreen}" Content="Start First Turn" 
                Width="250" Height="50" Margin="10" HorizontalAlignment="Center" Click="CenterButton_Click" />
        <!--<Button x:Name="RightButton" Style="{StaticResource BasicButtonStyleRed}" Content="End Game" 
                Width="150" Height="50" Margin="10" HorizontalAlignment="Right" Click="EndGameButton_Click" />-->
        <TextBlock x:Name="ControlBarLabel" Text="Current Year: 0" HorizontalAlignment="Right" VerticalAlignment="Center" 
                   Foreground="{StaticResource Celadon}" FontSize="24" Margin="10 0" />
    </Grid>
</UserControl>
