<UserControl x:Class="UpsAndDowns.Controls.TitleScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UpsAndDowns.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1280">
    <Grid Background="{StaticResource CornflowerBlue}">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Foreground="{StaticResource YInMnBlue}" Text="Ups And Downs" FontSize="48" Margin="0" />
            <Button Style="{StaticResource BasicButtonStyleGreen}" Click="StartButton_Click"
                    Content="Begin New Game" Width="200" Height="50" Margin="0 50 0 0" />
        </StackPanel>
        <Button VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="30" Content="PRINT TEST"
                Width="150" Height="60" Click="PrintTestButton_Click" />
    </Grid>
</UserControl>
