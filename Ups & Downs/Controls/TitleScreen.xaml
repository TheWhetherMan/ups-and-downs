<UserControl x:Class="UpsAndDowns.Controls.TitleScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UpsAndDowns.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1024">
    <Grid Background="{StaticResource BlackBean}">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Foreground="{StaticResource RoseRed}" Text="Ups And Downs" FontSize="48" Margin="0" />
            <Button Style="{StaticResource BasicButtonStyleRed}" Click="StartButton_Click"
                    Content="Start Game" Width="200" Height="50" Margin="0 50 0 0" />
        </StackPanel> 
    </Grid>
</UserControl>
